            </ToggleButton>
            <ToggleButton>
                <ToggleButton.Content>
                    <StackPanel>
                        <Image Source="img/barcelone.jpg"/>
                        <TextBlock Text="BARCELONE"/>
                    </StackPanel>
                </ToggleButton.Content>
            </ToggleButton>
            <ToggleButton>
                <ToggleButton.Content>
                    <StackPanel>
                        <Image Source="img/barcelone.jpg"/>
                        <TextBlock Text="BARCELONE"/>
                    </StackPanel>
                </ToggleButton.Content>
            </ToggleButton>
            <ToggleButton>
                <ToggleButton.Content>
                    <StackPanel>
                        <Image Source="img/barcelone.jpg"/>
                        <TextBlock Text="BARCELONE"/>
                    </StackPanel>
